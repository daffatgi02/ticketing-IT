generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STAFF
  USER
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ProjectType {
  INFRASTRUCTURE
  WEB_DEV
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  COMPLETED
  ON_HOLD
}

enum InfraPhase {
  PROPOSAL
  RKB
  DISBURSEMENT
  EXECUTION
  COMPLETED
}

enum ApprovalStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
  REVISED
}

enum TaskFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  phoneNumber   String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  createdTickets  Ticket[] @relation("CreatedBy")
  assignedTickets Ticket[] @relation("AssignedTo")
  managedProjects Project[] @relation("ManagedBy")
  tasks           Task[]
  comments        Comment[]
  accounts        Account[]
  sessions        Session[]
  auditLogs       AuditLog[]
}

model Ticket {
  id             String       @id @default(cuid())
  title          String
  description    String       @db.Text
  status         TicketStatus @default(OPEN)
  priority       Priority     @default(MEDIUM)
  category       String?      // Laptop, Tablet, HP, WiFi, etc.
  classification String?      // Hardware, Software
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  creatorId String
  creator   User   @relation("CreatedBy", fields: [creatorId], references: [id])
  
  assigneeId String?
  assignee   User?   @relation("AssignedTo", fields: [assigneeId], references: [id])

  comments Comment[]
}

model Downtime {
  id        String   @id @default(cuid())
  startTime DateTime
  endTime   DateTime?
  reason    DowntimeReason
  details   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum DowntimeReason {
  POWER
  ISP
  HARDWARE
  MAINTENANCE
  OTHER
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?       @db.Text
  type        ProjectType
  status      ProjectStatus @default(PLANNING)
  websiteName String?       // Nama website/sistem spesifik
  environment String?       // Production, Staging, dll.
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Infrastructure-specific fields
  currentPhase    InfraPhase?  // Fase SOP saat ini (null untuk WEB_DEV)
  category        String?      // Server, Network, CCTV, Printer, dll.
  location        String?      // Lokasi instalasi
  requestedBy     String?      // Pemohon / departemen
  estimatedBudget Float?       // Estimasi anggaran awal

  managerId String
  manager   User   @relation("ManagedBy", fields: [managerId], references: [id])

  milestones     Milestone[]
  proposal       InfraProposal?
  rkbSubmission  RkbSubmission?
  rkbItems       RkbItem[]
  disbursement   FinanceDisbursement?
  executionLogs  InfraExecution[]
}

model Milestone {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  dueDate     DateTime?
  isCompleted Boolean  @default(false)
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model InfraProposal {
  id              String         @id @default(cuid())
  background      String?        @db.Text  // Latar belakang
  objectives      String?        @db.Text  // Tujuan
  scope           String?        @db.Text  // Ruang lingkup
  benefits        String?        @db.Text  // Manfaat
  riskAnalysis    String?        @db.Text  // Analisis risiko
  approvalStatus  ApprovalStatus @default(DRAFT)
  approvedBy      String?                  // Nama approver
  approvalDate    DateTime?
  rejectionReason String?        @db.Text
  attachmentUrl   String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model RkbSubmission {
  id               String         @id @default(cuid())
  submissionNumber String?                  // Nomor pengajuan (RKB/IT/2026/001)
  justification    String?        @db.Text  // Justifikasi kebutuhan
  totalBudget      Float?                   // Total anggaran
  approvalStatus   ApprovalStatus @default(DRAFT)
  approvedBy       String?
  approvalDate     DateTime?
  rejectionReason  String?        @db.Text
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model RkbItem {
  id            String   @id @default(cuid())
  itemName      String             // Nama barang/jasa
  specification String?  @db.Text  // Spesifikasi teknis
  quantity      Int      @default(1)
  unit          String   @default("Unit") // Satuan
  unitPrice     Float    @default(0)
  totalPrice    Float    @default(0)       // quantity * unitPrice
  vendor        String?                    // Vendor/supplier
  notes         String?  @db.Text
  createdAt     DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model FinanceDisbursement {
  id               String         @id @default(cuid())
  approvedBudget   Float?                   // Anggaran disetujui
  disbursedAmount  Float?                   // Jumlah dicairkan
  disbursementDate DateTime?
  paymentMethod    String?                  // Transfer, Cash, dll.
  referenceNumber  String?                  // Nomor referensi pembayaran
  approvalStatus   ApprovalStatus @default(DRAFT)
  approvedBy       String?
  approvalDate     DateTime?
  notes            String?        @db.Text
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model InfraExecution {
  id                   String   @id @default(cuid())
  activityDescription  String   @db.Text    // Deskripsi kegiatan
  executionDate        DateTime @default(now())
  progressPercentage   Int      @default(0) // 0-100
  findings             String?  @db.Text    // Temuan/catatan
  completedBy          String?              // Pelaksana
  photoUrl             String?
  createdAt            DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Task {
  id              String        @id @default(cuid())
  title           String
  description     String?       @db.Text
  frequency       TaskFrequency
  isCompleted     Boolean       @default(false)
  lastCompletedAt DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  ticketId String?
  ticket   Ticket? @relation(fields: [ticketId], references: [id], onDelete: Cascade)
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String   // CREATE, UPDATE, DELETE
  entity    String   // TICKET, PROJECT, USER, etc.
  entityId  String
  details   String?  @db.Text
  timestamp DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([timestamp])
}
